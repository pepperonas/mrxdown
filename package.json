{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "Ein simpler Markdown Editor f√ºr macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder"
  },
  "keywords": ["markdown", "editor", "macos"],
  "author": "Dein Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yourcompany.markdown-editor",
    "productName": "Markdown Editor",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "darkModeSupport": true,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 480,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}